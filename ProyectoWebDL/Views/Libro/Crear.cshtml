@model ProyectoWebDL.Models.Entities.Libro
@{
    Layout = "_LayoutDashboard";
}
<div class="container-fluid">
    <div class="col-sm-8">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Crear libro</strong></h1>

            </div>

            <div class="card-body">

                <form asp-action="Crear" method="post">

                    <div class="form-group">
                        <label asp-for="NombreLibro" class="control-label"></label>
                        <input asp-for="NombreLibro" class="form-control" placeholder="Ingresa el titulo" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Editorial" class="control-label"></label>
                        <input asp-for="Editorial" class="form-control" placeholder="Ingresa la descripción" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Autor" class="control-label"></label>
                        <input asp-for="Autor" class="form-control" placeholder="Ingresa el titulo de la imagen" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="Genero" class="control-label"></label>
                        <input asp-for="Genero" class="form-control" placeholder="Ingresa el genero" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="PaisAutor" class="control-label"></label>
                        <input asp-for="PaisAutor" class="form-control" placeholder="Ingresa el pais del autor" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="NumeroDePaginas" class="control-label"></label>
                        <input asp-for="NumeroDePaginas" class="form-control" placeholder="Ingresa el titulo de la imagen" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="AnioDeEdicion" class="control-label"></label>
                        <input asp-for="AnioDeEdicion" class="form-control" placeholder="Ingresa el año de edicion" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="Precio" class="control-label"></label>
                        <input asp-for="Precio" class="form-control" placeholder="Ingresa el precio" required />
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto"><i class="bi bi-person-fill"></i> Guardar</button>
                    </div>

                </form>


                <a asp-controller="Articulo" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>

